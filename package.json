    "cors": "^2.8.5",
    "dinero.js": "^1.9.1",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^3.6.0",
    "mongoose": "^7.0.1",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.3.3",
    "tsyringe": "^4.5.0",
    "typeorm": "^0.3.14",
    "uuid": "^8.3.2",
    "yup": "^1.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
