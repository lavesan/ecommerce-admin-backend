    "@types/mongoose": "^5.11.97",
    "@types/node": "^14.14.35",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.0",
    "jest": "^29.4.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  }
